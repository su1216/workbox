<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/workbox_item_selector"
              android:orientation="vertical"
              android:clickable="true"
              android:focusable="true"
              android:paddingBottom="14dip"
              android:paddingStart="13dip"
              android:paddingEnd="13dip"
              android:paddingTop="14dip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cid"
            android:layout_width="48dip"
            android:layout_height="wrap_content"
            android:textColor="@color/workbox_first_text"
            android:textSize="14sp"
            tools:text="cid: 12"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/workbox_first_text"
            android:textSize="14sp"
            tools:text="name: "/>
        <TextView
            android:id="@+id/pk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/workbox_color_accent"
            android:textSize="14sp"
            android:text="primary key"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/type"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/workbox_first_text"
            android:textSize="14sp"
            tools:text="type: "/>
        <TextView
            android:id="@+id/notnull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/workbox_color_accent"
            android:textSize="14sp"
            android:text="notnull"/>
    </LinearLayout>
</LinearLayout>
