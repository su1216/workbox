<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/workbox_item_selector"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="13dp"
    android:paddingTop="8dp"
    android:paddingEnd="13dp"
    android:paddingBottom="8dp">
    <TextView
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/workbox_first_text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="java.lang.NullPointerException"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:textColor="@color/workbox_second_text"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstLine"
        tools:text="2019-04-25 00:01:50 994"/>
    <TextView
        android:id="@+id/pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/workbox_first_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/time"
        tools:text="pid:12345"/>
</androidx.constraintlayout.widget.ConstraintLayout>
