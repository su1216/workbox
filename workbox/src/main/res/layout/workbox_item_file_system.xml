<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/workbox_item_selector"
              android:orientation="vertical"
              android:paddingBottom="14dip"
              android:paddingStart="13dip"
              android:paddingEnd="13dip"
              android:paddingTop="14dip">
    <TextView
        android:id="@+id/mounted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/workbox_color_primary"
        android:textSize="14sp"
        tools:text="permission"/>
    <TextView
        android:id="@+id/file_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textColor="@color/workbox_second_text"
        android:textSize="14sp"
        tools:text="dangerous"/>
    <TextView
        android:id="@+id/used_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textColor="@color/workbox_second_text"
        android:textSize="14sp"
        tools:text="android.permission-group.PHONE"/>
</LinearLayout>
