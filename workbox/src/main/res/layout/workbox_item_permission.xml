<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/workbox_item_selector"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="13dip"
    android:paddingTop="14dip"
    android:paddingEnd="13dip"
    android:paddingBottom="14dip">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/workbox_second_text"
        android:textSize="12sp"
        tools:text="permission" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textColor="@color/workbox_second_text"
        android:textSize="12sp"
        tools:text="dangerous" />

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textColor="@color/workbox_second_text"
        android:textSize="12sp"
        tools:text="android.permission-group.PHONE" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:textColor="@color/workbox_third_text"
        android:textSize="12sp"
        tools:text="desc" />
</LinearLayout>
